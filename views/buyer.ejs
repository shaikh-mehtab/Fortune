<% var buyer=buyer[0]%>
    <% var buyer_faq=buyer_faq%>

        <style>
            .accordion-button:not(.collapsed) {
                box-shadow: black;
                background-color: #efff02 !important;
                color: #333 !important;
                ;
            }

            .accordion-button {
                padding: 90px;
            }

            .accordion-body {
                padding: var(--bs-accordion-body-padding-y) var(--bs-accordion-body-padding-x);
            }

            .nav {
                --bs-nav-link-hover-color: #EFFF02;
            }

            .bg-gray .nav-link {
                color: rgb(255, 255, 255) !important;
                background-color: #646262 !important;
            }

            .bg-gray .nav-link:hover {
                color: var(--base-color) !important;
            }

            .accordion {
                --bs-accordion-btn-padding-y: 0.3rem !important;
                --bs-accordion-bg: #000 !important;
                --bs-accordion-btn-focus-box-shadow: none !important;
                --bs-accordion-btn-padding-x: 5rem;
                --bs-accordion-border-color: var(--bs-border-color): none !important;
                --bs-accordion-body-padding-x: none !important;


                --bs-accordion-btn-active-icon: url(data:image/svg+xml,%3csvg xmlns='https://ibb.co/Wyn5t1Z' viewBox='0 0 16 16' fill='%23052c65'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e);
                /* active color  */
                /* --bs-accordion-active-color: #ffffff;  
            --bs-accordion-active-bg: #ffffff; */
            }
        </style>


        <%- include('include/head') %>

            <body class="custom-cursor overflow-x-hidden" data-mobile-nav-style="classic">
                <!-- start cursor -->
                <div class="cursor-page-inner">
                    <div class="circle-cursor circle-cursor-inner"></div>
                    <div class="circle-cursor circle-cursor-outer"></div>
                </div>
                <!-- end cursor -->
                <!-- start header -->
                <%- include('include/header') %>
                    <!-- end header -->
                    <!-- start page title -->
                    <section
                        class="ipad-top-space-margin page-title-big-typography cover-background background-position-center-bottom p-0 bg-dark-gray"
                        style=" background-image: url('<% if (buyer.cover_url) { %><%= API_IMG + JSON.parse(buyer.cover_url) %><% }%>')
        ">
                        <div class="container">
                            <div
                                class="row align-items-end justify-content-center one-half-screen md-small-screen sm-extra-small-screen pb-9">
                                <div class="col-lg-6 col-md-8 position-relative page-title-extra-small text-center"
                                    data-anime='{ "el": "childs", "translateY": [30, 0], "opacity": [0,1], "duration": 600, "delay": 0, "staggervalue": 300, "easing": "easeOutQuad" }'>
                                    <h1 class="mb-20px alt-font text-white fw-500 ls-minus-4px">
                                        <span class="text-base-color">Buyers Guide
                                    </h1>
                                    <h2 class="text-white mb-0 text-uppercase ls-3px fw-600">
                                        <%= buyer.breadcrumb_name %>
                                    </h2>
                                </div>
                            </div>

                        </div>


                    </section>

                    <% // Group the FAQs by title 
   var groupedFAQs = buyer_faq.reduce((acc, faq) => {
       acc[faq.title] = acc[faq.title] || [];
       acc[faq.title].push(faq);
       return acc;
   }, {});
%>

                  

                        <div class="bg-gray text-base-color">
                            <ul class="nav nav-fill"
                                data-anime='{ "el": "childs", "translateY": [30, 0], "opacity": [0,1], "duration": 600, "delay": 0, "staggervalue": 300, "easing": "easeOutQuad" }'>
                                <% Object.keys(groupedFAQs).forEach(function(title, index) { %>
                                    <li class="nav-item bg-base-color text-base">
                                        <a class="nav-link py-3" href="#heading<%= index %>">
                                            <%= title %>
                                        </a>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>

                        <section class="bg-black text-white">
                            <div class="container">
                                <% Object.keys(groupedFAQs).forEach(function(title, index) { %>
                                    <div class="row align-items-start bg-gray">
                                        <div class="col">
                                            <div class="accordion" id="accordionExample">
                                                <div class="accordion-item bg-black p-5">
                                                    <h2 class="accordion-header" id="heading<%= index %>">
                                                        <h5 class="bg-black text-base-color" style="text-decoration-line: underline;">
                                                            <%= title %>
                                                        </h5>
                                                    </h2>
                                                    <% groupedFAQs[title].forEach(function(faq, qIndex) { %>
                                                        <div class="accordion-item my-3">
                                                            <button class="accordion-button bg-medium-gray text-white" type="button" data-bs-toggle="collapse"
                                                                data-bs-target="#collapse<%= index %>-<%= qIndex %>" aria-expanded="false" aria-controls="collapse<%= index %>-<%= qIndex %>">
                                                                <b><%= faq.question %></b>
                                                            </button>
                                                            <div id="collapse<%= index %>-<%= qIndex %>" class="accordion-collapse collapse bg-dark-gray text-gray p-3"
                                                                aria-labelledby="heading<%= index %>" data-bs-parent="#accordionExample">
                                                                <div class="accordion-body text-justify">
                                                                    <p class="fs-13 text-left"><%= faq.answer %></p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col mb-3 mt-3" id="imagesContainer">
                                            <a href="#">
                                                <img src="<% if (groupedFAQs[title][0].cover_image) { %>
                                                    <%= API_IMG + JSON.parse(groupedFAQs[title][0].cover_image) %>
                                                <% } %>" alt="" />
                                            </a>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </section>

                        <%- include('include/footer') %>
            </body>